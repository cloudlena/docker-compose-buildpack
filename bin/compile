#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -e

#docker_version=${DOCKER_VERSION:="1.12.3"}
#docker_compose_version=${DOCKER_COMPOSE_VERSION:="1.9.0"}

docker_version=${DOCKER_VERSION:="19.03.5"}
docker_compose_version=${DOCKER_COMPOSE_VERSION:="1.25.4"}

build_dir=$1

function install_docker {
  echo "Installing Docker ${docker_version}"

  cd "${build_dir}"

  curl -O "https://get.docker.com/builds/Linux/x86_64/docker-${docker_version}.tgz"
  tar -xzf "docker-${docker_version}.tgz"

  "docker/dockerd" &
}

function install_docker_compose {
  echo "Installing Docker Compose ${docker_compose_version}"

  cd "${build_dir}"

  curl -L "https://github.com/docker/compose/releases/download/${docker_compose_version}/docker-compose-$(uname -s)-$(uname -m)"
}

install_docker
# install_docker_compose
